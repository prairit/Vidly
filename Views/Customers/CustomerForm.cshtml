@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Get";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true,"Please update the following fields.")
    <div class="form-group">
        @Html.LabelFor(e => e.Customer.Name)
        @Html.TextBoxFor(e => e.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Customer.MembershipType)
        @Html.DropDownListFor(e => e.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Customer.Birthdate)
        @Html.TextBoxFor(e => e.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Customer.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Customer.IsSubscribedToNewsletter)
        @Html.CheckBoxFor(e => e.Customer.IsSubscribedToNewsletter, new { @class = "checkbox" })
    </div>
    <div>@Html.HiddenFor(e => e.Customer.Id)</div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Submit</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

